<div class="index_container" data-controller="insert-map-in-index">
  <div class="header">
    <h2>Available Pals</h2>
    <div class="filters" data-action="click->insert-map-in-index#mapShows">
      <h2>map</h2>
    </div>
  </div>
    <div class="cards_wrapper" data-insert-map-in-index-target="peopleIndex">
      <% @pals.each do |pal| %>
        <%= link_to new_pal_booking_path(pal), class: "pal_card myDIV" do %>
          <%= cl_image_tag pal.photo.key, crop: :fill %>
          <h3 class="pal_name"><%= pal.name %></h3>
          <div class="hide-me">Hang with me!</div>
          <div class="stars">
            <% pal.rating.times do %>
              <h3><i class="fa-solid fa-star" style="color: #ffd000;"></i></h3>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div  data-controller="map"
          data-insert-map-in-index-target="peopleMap"
          data-map-markers-value="<%= @markers.to_json %>"
          id="map"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          style="width: 100%; height: 600px;"
          class="cards_wrapper">
    </div>
</div>
